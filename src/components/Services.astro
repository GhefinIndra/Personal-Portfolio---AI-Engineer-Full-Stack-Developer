    <div class="grid md:grid-cols-3 gap-8">
      {services.map((service) => (
        <div class="group bg-white p-8 rounded-3xl border border-gray-100 shadow-sm hover:shadow-soft-hover transition-all duration-300 hover:-translate-y-1 fade-in-up">
          <div class="w-14 h-14 rounded-2xl bg-blue-50 flex items-center justify-center text-primary mb-6 group-hover:scale-110 transition-transform">
            <span class="material-icons-round text-2xl">{service.icon}</span>
          </div>
          <h3 class="font-display text-xl font-bold text-text-main mb-3">{service.title}</h3>
          <p class="text-text-muted leading-relaxed text-sm">{service.description}</p>
