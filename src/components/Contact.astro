<!-- EmailJS SDK - Load first -->
<script is:inline src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>

<!-- Contact Form Handler -->
<script is:inline>
  // Wait for DOM and EmailJS to be ready
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize EmailJS with public key
    if (typeof emailjs !== 'undefined') {
      emailjs.init('O_uAB_6Ki972-78vf');
    }
    
    const form = document.getElementById('contact-form');
    const nameInput = document.getElementById('name');
    const fromNameInput = document.getElementById('from_name');
    const submitBtn = document.getElementById('submit-btn');
    const btnText = document.getElementById('btn-text');
    const btnIcon = document.getElementById('btn-icon');
    const btnLoading = document.getElementById('btn-loading');
    const successMessage = document.getElementById('success-message');
    const errorMessage = document.getElementById('error-message');
    const errorDetails = document.getElementById('error-details');
    const tryAgainBtn = document.getElementById('try-again-btn');
    
    if (!form) {
      console.error('Contact form not found');
      return;
    }
    
    // Sync from_name with name field
    if (nameInput) {
      nameInput.addEventListener('input', function() {
        if (fromNameInput) fromNameInput.value = nameInput.value;
      });
    }
    
    // Show loading state
    function setLoading(loading) {
      if (loading) {
        btnText.textContent = 'Sending...';
        btnIcon.classList.add('hidden');
        btnLoading.classList.remove('hidden');
        submitBtn.disabled = true;
      } else {
        btnText.textContent = 'Send Message';
        btnIcon.classList.remove('hidden');
        btnLoading.classList.add('hidden');
        submitBtn.disabled = false;
      }
    }
    
    // Reset form to initial state
    function resetForm() {
      form.classList.remove('hidden');
      successMessage.classList.add('hidden');
      errorMessage.classList.add('hidden');
      form.reset();
    }
    
    // Handle form submission
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      e.stopPropagation();
      
      // Sync from_name before sending
      if (fromNameInput && nameInput) {
        fromNameInput.value = nameInput.value;
      }
      
      setLoading(true);
      
      // Check if EmailJS is loaded
      if (typeof emailjs === 'undefined') {
        console.error('EmailJS not loaded');
        errorDetails.textContent = 'Email service not loaded. Please refresh the page.';
        form.classList.add('hidden');
        errorMessage.classList.remove('hidden');
        setLoading(false);
        return;
      }
      
      // Send email via EmailJS
      emailjs.sendForm('service_ihjxcth', 'template_7wr2wwh', form)
        .then(function(response) {
          console.log('SUCCESS!', response.status, response.text);
          form.classList.add('hidden');
          successMessage.classList.remove('hidden');
          form.reset();
        })
        .catch(function(error) {
          console.error('FAILED...', error);
          errorDetails.textContent = error.text || 'Please try again or contact me directly via email.';
          form.classList.add('hidden');
          errorMessage.classList.remove('hidden');
        })
        .finally(function() {
          setLoading(false);
        });
      
      return false;
    });
    
    // Try again button
    if (tryAgainBtn) {
      tryAgainBtn.addEventListener('click', resetForm);
    }
  });
</script>
