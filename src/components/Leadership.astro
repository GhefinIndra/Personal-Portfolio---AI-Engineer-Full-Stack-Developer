---
// Leadership experiences ordered by most recent first
const leadership = [
  {
    period: 'Jan 2025 - Present',
    role: 'Data Research',
    organization: 'Central Computer Improvement',
    description: 'Participated in data processing and analysis using machine learning and deep learning. Applied supervised and unsupervised learning techniques, assisted in building predictive models, and collaborated with team to design AI-driven solutions.',
  },
  {
    period: 'Jun 2024 - Jan 2025',
    role: 'Staff of Business & Entrepreneurship',
    organization: 'HIMA IF (Informatics Student Association)',
    description: 'Coordinated podcast series featuring student entrepreneurs, managed podcast production and editing. Created business tips animation series "TIPIS (Tips Berbisnis)" and designed Informatics merchandise with marketing strategies.',
  },
  {
    period: 'Sep 2023 - Aug 2024',
    role: 'Media Team - Vlogcast Division',
    organization: 'Marketing Crew Telkom University',
    description: 'Contributed to university promotional content through podcast production. Served as technical operator handling camera, lighting, and audio. Edited episodes for official media channels and promoted Telkom University to prospective students nationwide.',
  },
  {
    period: 'Jun 2023 - Oct 2023',
    role: 'Staff of Discipline Committee',
    organization: 'REKAM Rumah Gadang',
    description: 'Served in the Discipline Committee for the welcoming event and orientation night for new students from West Sumatra. Maintained order, ensured participant discipline, and managed field situations smoothly.',
  },
  {
    period: 'Jun 2023 - Sep 2023',
    role: 'Staff Creative',
    organization: 'Hello World - PKKMB Informatics',
    description: 'Served as committee member for the Informatics orientation program (PKKMB). Joined the Creative Division handling event documentation and visual design for Instagram feeds, publications, and other design needs.',
  },
];
---

<section id="leadership" class="py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16 fade-in-up">
      <span class="text-primary font-bold tracking-wider text-sm uppercase">Organizational Experience</span>
      <h2 class="mt-3 font-display text-3xl md:text-5xl font-bold text-text-main">Leadership & Activities</h2>
      <p class="mt-4 text-text-muted text-lg max-w-2xl mx-auto">
        Active involvement in campus organizations and committees, developing leadership and teamwork skills.
      </p>
    </div>
    
    <div class="relative">
      <!-- Timeline line -->
      <div class="absolute left-1/2 transform -translate-x-1/2 w-0.5 h-full bg-gray-200 hidden md:block"></div>
      
      <div class="space-y-12">
        {leadership.map((item, i) => (
          <div class="relative flex flex-col md:flex-row items-center justify-between group timeline-item fade-in-up">
            <!-- Timeline dot -->
            <div class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-primary rounded-full border-4 border-white shadow-md z-10 hidden md:block">
              {i === 0 && <div class="absolute inset-0 bg-primary rounded-full animate-ping opacity-75"></div>}
            </div>
            
            <!-- Left side (odd) or spacer (even) -->
            {i % 2 === 0 ? (
              <div class="md:w-5/12 text-right order-1 pr-8 perspective-1000">
                <div class="tilt-card bg-white p-6 rounded-2xl border border-gray-100 shadow-soft hover:shadow-soft-hover transition-all duration-300">
                  <span class="text-primary font-semibold text-sm">{item.period}</span>
                  <h3 class="font-display font-bold text-lg text-text-main mt-1">{item.role}</h3>
                  <p class="text-primary font-medium text-sm mt-1">{item.organization}</p>
                  <p class="text-text-muted text-sm mt-2 leading-relaxed">{item.description}</p>
                </div>
              </div>
            ) : (
              <div class="md:w-5/12 order-1"></div>
            )}
            
            <!-- Right side (even) or spacer (odd) -->
            {i % 2 === 1 ? (
              <div class="md:w-5/12 text-left order-2 pl-8 perspective-1000">
                <div class="tilt-card bg-white p-6 rounded-2xl border border-gray-100 shadow-soft hover:shadow-soft-hover transition-all duration-300">
                  <span class="text-primary font-semibold text-sm">{item.period}</span>
                  <h3 class="font-display font-bold text-lg text-text-main mt-1">{item.role}</h3>
                  <p class="text-primary font-medium text-sm mt-1">{item.organization}</p>
                  <p class="text-text-muted text-sm mt-2 leading-relaxed">{item.description}</p>
                </div>
              </div>
            ) : (
              <div class="md:w-5/12 order-2"></div>
            )}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
