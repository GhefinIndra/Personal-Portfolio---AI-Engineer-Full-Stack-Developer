---
const stats = [
  { icon: 'work_outline', value: '1+ Years', label: 'Experience' },
  { icon: 'folder_open', value: '14+ Projects', label: 'Delivered' },
  { icon: 'business', value: '2+ Companies', label: 'Collaborated' },
];

const tags = [
  'AI Engineer',
  'Full Stack Developer',
  'Mobile Developer',
  'Data Research',
];
---

<section id="home" class="relative pt-24 pb-16 sm:pt-28 sm:pb-20 lg:pt-48 lg:pb-32 overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-10 sm:gap-12 lg:gap-8 items-center">
      
      <!-- Left Content -->
      <div class="space-y-6 sm:space-y-8 fade-in-up">
        <div class="space-y-4">
          <h1 class="font-display text-4xl sm:text-5xl lg:text-7xl font-bold tracking-tight text-text-main leading-[1.1]">
            Building Digital Products <br/>
            <span class="text-primary bg-clip-text text-transparent bg-gradient-to-r from-primary to-blue-400">
              That Drive Results
            </span>
          </h1>
          <p class="text-base sm:text-lg text-text-muted max-w-xl leading-relaxed">
            I'm Ghefin Indra - an AI Engineer & Full Stack Developer who transforms complex business challenges into elegant, scalable solutions. Building AI systems, web, and mobile applications.
          </p>
        </div>
        
        <!-- Tags -->
        <div class="flex flex-wrap gap-2 sm:gap-3">
          {tags.map((tag) => (
            <span class="px-3 py-1.5 sm:px-4 sm:py-2 rounded-full bg-white border border-gray-200 text-xs sm:text-sm font-medium text-text-main shadow-sm">
              {tag}
            </span>
          ))}
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row sm:flex-wrap gap-3 sm:gap-4 pt-1 sm:pt-2">
          <a 
            href="/CV_Ghefin_Indra.pdf" 
            download
            class="inline-flex w-full sm:w-auto items-center justify-center px-6 py-3 text-base font-medium rounded-full text-white bg-text-main hover:bg-gray-800 transition-all shadow-lg hover:shadow-xl"
          >
            <span class="material-icons-round mr-2 text-lg">download</span>
            Download CV
          </a>
          <button 
            type="button"
            id="cv-open"
            class="inline-flex w-full sm:w-auto items-center justify-center px-6 py-3 text-base font-medium rounded-full text-text-main bg-white border border-gray-300 hover:bg-gray-50 transition-all"
            aria-controls="cv-modal"
            aria-haspopup="dialog"
          >
            <span class="material-icons-round mr-2 text-lg text-primary">visibility</span>
            View CV
          </button>
          <a 
            href="#contact" 
            class="inline-flex w-full sm:w-auto items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-full text-text-main bg-white hover:bg-gray-50 transition-all"
          >
            <span class="material-icons-round mr-2 text-lg text-primary">mail_outline</span>
            Get in Touch
          </a>
        </div>
      </div>
      
      <!-- Right - Photo & Stats -->
      <div class="relative lg:h-[600px] flex items-center justify-center">
        <!-- Decorative circles -->
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="w-[320px] h-[320px] sm:w-[420px] sm:h-[420px] lg:w-[500px] lg:h-[500px] border border-dashed border-gray-200 rounded-full animate-[spin_60s_linear_infinite]"></div>
          <div class="absolute w-[240px] h-[240px] sm:w-[320px] sm:h-[320px] lg:w-[350px] lg:h-[350px] border border-gray-100 rounded-full"></div>
        </div>
        
        <!-- Profile Photo -->
        <div class="relative z-10 w-64 h-64 sm:w-72 sm:h-72 lg:w-96 lg:h-96 rounded-full overflow-hidden border-6 sm:border-8 border-white shadow-2xl">
          <img 
            src="/images/profile.png" 
            alt="Ghefin Indra Portrait" 
            class="w-full h-full object-cover object-top"
          />
        </div>

        <!-- Mobile Stats Grid -->
        <div class="mt-6 w-full max-w-sm sm:max-w-md mx-auto grid grid-cols-2 gap-3 lg:hidden">
          {stats.map((stat, index) => (
            <div class={`bg-white p-3 rounded-2xl shadow-soft flex items-center gap-3 border border-gray-100 ${index === 2 ? 'col-span-2 justify-center' : ''}`}>
              <div class="w-10 h-10 rounded-xl bg-blue-50 flex items-center justify-center text-primary">
                <span class="material-icons-round text-base">{stat.icon}</span>
              </div>
              <div>
                <h3 class="font-display font-bold text-base text-text-main">{stat.value}</h3>
                <p class="text-[11px] text-text-muted">{stat.label}</p>
              </div>
            </div>
          ))}
        </div>
        
        <!-- Floating Stats Cards -->
        <div class="absolute top-1/2 right-0 lg:-right-4 transform -translate-y-24 translate-x-4 lg:translate-x-0 z-20 animate-float hidden lg:flex">
          <div class="bg-white p-4 rounded-2xl shadow-soft flex items-center gap-4 border border-gray-100">
            <div class="w-12 h-12 rounded-xl bg-blue-50 flex items-center justify-center text-primary">
              <span class="material-icons-round">work_outline</span>
            </div>
            <div>
              <h3 class="font-display font-bold text-lg text-text-main">1+ Years</h3>
              <p class="text-xs text-text-muted">Experience</p>
            </div>
          </div>
        </div>
        
        <div class="absolute top-1/2 left-0 lg:-left-8 transform translate-y-8 -translate-x-4 lg:translate-x-0 z-20 animate-float hidden lg:flex" style="animation-delay: 1.5s;">
          <div class="bg-white p-4 rounded-2xl shadow-soft flex items-center gap-4 border border-gray-100">
            <div class="w-12 h-12 rounded-xl bg-blue-50 flex items-center justify-center text-primary">
              <span class="material-icons-round">folder_open</span>
            </div>
            <div>
              <h3 class="font-display font-bold text-lg text-text-main">14+ Projects</h3>
              <p class="text-xs text-text-muted">Delivered</p>
            </div>
          </div>
        </div>
        
        <div class="absolute bottom-10 right-10 lg:right-12 z-20 animate-float hidden lg:flex" style="animation-delay: 2.5s;">
          <div class="bg-white p-4 rounded-2xl shadow-soft flex items-center gap-4 border border-gray-100">
            <div class="w-12 h-12 rounded-xl bg-blue-50 flex items-center justify-center text-primary">
              <span class="material-icons-round">business</span>
            </div>
            <div>
              <h3 class="font-display font-bold text-lg text-text-main">2+ Companies</h3>
              <p class="text-xs text-text-muted">Collaborated</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Background blur decoration -->
  <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-blue-50/50 rounded-full blur-3xl -z-10 translate-x-1/2 -translate-y-1/2"></div>

  <!-- CV Modal -->
  <div id="cv-modal" class="fixed inset-0 z-[120] hidden items-center justify-center bg-black/70 p-2 sm:p-4" role="dialog" aria-modal="true" aria-labelledby="cv-modal-title">
    <div class="relative w-full sm:max-w-5xl h-[100svh] sm:h-[85vh] bg-white rounded-none sm:rounded-2xl shadow-2xl overflow-hidden">
      <div class="flex items-center justify-between px-5 py-4 border-b border-gray-100">
        <h3 id="cv-modal-title" class="font-display font-bold text-lg text-text-main">Curriculum Vitae</h3>
        <div class="flex items-center gap-2">
          <a 
            href="/CV_Ghefin_Indra.pdf" 
            download
            class="inline-flex items-center px-3 py-2 text-sm font-medium rounded-full text-white bg-text-main hover:bg-gray-800 transition-all"
          >
            <span class="material-icons-round mr-1 text-base">download</span>
            Download
          </a>
          <button id="cv-close" type="button" class="p-2 rounded-lg hover:bg-gray-100 transition-colors" aria-label="Close CV">
            <span class="material-icons-round text-text-main">close</span>
          </button>
        </div>
      </div>
      <iframe 
        src="/CV_Ghefin_Indra.pdf" 
        class="w-full h-[calc(100svh-64px)] sm:h-[calc(85vh-64px)]"
        title="Ghefin Indra CV"
      ></iframe>
    </div>
  </div>
</section>

<script is:inline>
  const cvOpenBtn = document.getElementById('cv-open');
  const cvModal = document.getElementById('cv-modal');
  const cvCloseBtn = document.getElementById('cv-close');

  function openCvModal() {
    if (!cvModal) return;
    cvModal.classList.remove('hidden');
    cvModal.classList.add('flex');
    document.body.style.overflow = 'hidden';
  }

  function closeCvModal() {
    if (!cvModal) return;
    cvModal.classList.add('hidden');
    cvModal.classList.remove('flex');
    document.body.style.overflow = '';
  }

  if (cvOpenBtn) {
    cvOpenBtn.addEventListener('click', openCvModal);
  }
  if (cvCloseBtn) {
    cvCloseBtn.addEventListener('click', closeCvModal);
  }
  if (cvModal) {
    cvModal.addEventListener('click', (e) => {
      if (e.target === cvModal) closeCvModal();
    });
  }

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeCvModal();
  });
</script>
