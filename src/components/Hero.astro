---
const stats = [
  { icon: 'work_outline', value: '2+ Years', label: 'Experience' },
  { icon: 'folder_open', value: '14+ Projects', label: 'Delivered' },
  { icon: 'business', value: '3+ Companies', label: 'Collaborated' },
];

const tags = [
  'AI Engineer',
  'Full Stack Developer',
  'Mobile Developer',
  'Data Research',
];
---

<section id="home" class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-8 items-center">
      
      <!-- Left Content -->
      <div class="space-y-8 fade-in-up">
        <div class="space-y-4">
          <h1 class="font-display text-5xl lg:text-7xl font-bold tracking-tight text-text-main leading-[1.1]">
            Building Digital Products <br/>
            <span class="text-primary bg-clip-text text-transparent bg-gradient-to-r from-primary to-blue-400">
              That Drive Results
            </span>
          </h1>
          <p class="text-lg text-text-muted max-w-xl leading-relaxed">
            I'm Ghefin Indra â€” an AI Engineer & Full Stack Developer who transforms complex business challenges into elegant, scalable solutions. Building AI systems, web, and mobile applications.
          </p>
        </div>
        
        <!-- Tags -->
        <div class="flex flex-wrap gap-3">
          {tags.map((tag) => (
            <span class="px-4 py-2 rounded-full bg-white border border-gray-200 text-sm font-medium text-text-main shadow-sm">
              {tag}
            </span>
          ))}
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-4 pt-2">
          <a 
            href="/CV_Ghefin_Indra.pdf" 
            download
            class="inline-flex items-center px-6 py-3 text-base font-medium rounded-full text-white bg-text-main hover:bg-gray-800 transition-all shadow-lg hover:shadow-xl"
          >
            <span class="material-icons-round mr-2 text-lg">download</span>
            Download CV
          </a>
          <a 
            href="#contact" 
            class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-full text-text-main bg-white hover:bg-gray-50 transition-all"
          >
            <span class="material-icons-round mr-2 text-lg text-primary">mail_outline</span>
            Get in Touch
          </a>
        </div>
      </div>
      
      <!-- Right - Photo & Stats -->
      <div class="relative lg:h-[600px] flex items-center justify-center">
        <!-- Decorative circles -->
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="w-[500px] h-[500px] border border-dashed border-gray-200 rounded-full animate-[spin_60s_linear_infinite]"></div>
          <div class="absolute w-[350px] h-[350px] border border-gray-100 rounded-full"></div>
        </div>
        
        <!-- Profile Photo -->
        <div class="relative z-10 w-80 h-80 lg:w-96 lg:h-96 rounded-full overflow-hidden border-8 border-white shadow-2xl">
          <img 
            src="/images/profile.png" 
            alt="Ghefin Indra Portrait" 
            class="w-full h-full object-cover object-top"
          />
        </div>
        
        <!-- Floating Stats Cards -->
        <div class="absolute top-1/2 right-0 lg:-right-4 transform -translate-y-24 translate-x-4 lg:translate-x-0 z-20 animate-float">
          <div class="bg-white p-4 rounded-2xl shadow-soft flex items-center gap-4 border border-gray-100">
            <div class="w-12 h-12 rounded-xl bg-blue-50 flex items-center justify-center text-primary">
              <span class="material-icons-round">work_outline</span>
            </div>
            <div>
              <h3 class="font-display font-bold text-lg text-text-main">2+ Years</h3>
              <p class="text-xs text-text-muted">Experience</p>
            </div>
          </div>
        </div>
        
        <div class="absolute top-1/2 left-0 lg:-left-8 transform translate-y-8 -translate-x-4 lg:translate-x-0 z-20 animate-float" style="animation-delay: 1.5s;">
          <div class="bg-white p-4 rounded-2xl shadow-soft flex items-center gap-4 border border-gray-100">
            <div class="w-12 h-12 rounded-xl bg-blue-50 flex items-center justify-center text-primary">
              <span class="material-icons-round">folder_open</span>
            </div>
            <div>
              <h3 class="font-display font-bold text-lg text-text-main">14+ Projects</h3>
              <p class="text-xs text-text-muted">Delivered</p>
            </div>
          </div>
        </div>
        
        <div class="absolute bottom-10 right-10 lg:right-12 z-20 animate-float" style="animation-delay: 2.5s;">
          <div class="bg-white p-4 rounded-2xl shadow-soft flex items-center gap-4 border border-gray-100">
            <div class="w-12 h-12 rounded-xl bg-blue-50 flex items-center justify-center text-primary">
              <span class="material-icons-round">business</span>
            </div>
            <div>
              <h3 class="font-display font-bold text-lg text-text-main">3+ Companies</h3>
              <p class="text-xs text-text-muted">Collaborated</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Background blur decoration -->
  <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-blue-50/50 rounded-full blur-3xl -z-10 translate-x-1/2 -translate-y-1/2"></div>
</section>
