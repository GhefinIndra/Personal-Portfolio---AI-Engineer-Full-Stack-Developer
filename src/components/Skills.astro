---
const technicalSkills = [
  { name: 'Flutter & Dart Development', percent: 90 },
  { name: 'React, Next.js & TypeScript', percent: 85 },
  { name: 'Node.js, Express & Backend', percent: 85 },
  { name: 'Python & AI/ML Integration', percent: 80 },
  { name: 'RESTful API & Database (MySQL)', percent: 85 },
  { name: 'Docker & DevOps Tools', percent: 75 },
];

const softSkills = [
  { name: 'Leadership', percent: 85 },
  { name: 'Collaboration', percent: 92 },
  { name: 'Problem Solving', percent: 94 },
  { name: 'Communication', percent: 85 },
  { name: 'Adaptability', percent: 95 },
  { name: 'Time Management', percent: 92 },
];
---

<section id="skills" class="py-20 bg-surface">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16 fade-in-up">
      <span class="text-primary font-bold tracking-wider text-sm uppercase">What I Master</span>
      <h2 class="mt-3 font-display text-3xl md:text-5xl font-bold text-text-main">Technical Skills</h2>
      <p class="mt-4 text-text-muted text-lg max-w-2xl mx-auto">
        Building robust applications with modern technologies, complemented by strong interpersonal abilities that drive successful project delivery.
      </p>
    </div>
    
    <div class="grid lg:grid-cols-2 gap-16">
      <!-- Left - Technical Skills -->
      <div class="fade-in-up">
        <div class="flex items-center gap-3 mb-8">
          <div class="w-1 h-8 bg-primary rounded-full"></div>
          <h3 class="font-display font-bold text-xl text-text-main">Core Technical Competencies</h3>
        </div>
        
        <div class="space-y-6">
          {technicalSkills.map((skill) => (
            <div class="group">
              <div class="flex justify-between mb-2">
                <span class="text-sm font-medium text-text-main">{skill.name}</span>
                <span class="text-sm font-bold text-primary">{skill.percent}%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div 
                  class="bg-primary h-2 rounded-full transition-all duration-1000 group-hover:bg-primary-dark skill-bar" 
                  style={`width: ${skill.percent}%`}
                ></div>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Right - Soft Skills (LARGER) -->
      <div class="fade-in-up">
        <div class="flex items-center gap-3 mb-8">
          <div class="w-1 h-8 bg-primary rounded-full"></div>
          <h3 class="font-display font-bold text-xl text-text-main">Key Soft Skills</h3>
        </div>
        
        <div class="grid grid-cols-3 gap-8">
          {softSkills.map((skill) => (
            <div class="flex flex-col items-center text-center">
              <!-- Circular Progress (LARGER) -->
              <div class="relative w-28 h-28 mb-4">
                <svg class="w-full h-full transform -rotate-90" viewBox="0 0 100 100">
                  <!-- Background circle -->
                  <circle 
                    cx="50" cy="50" r="42" 
                    fill="none" 
                    stroke="#E5E7EB" 
                    stroke-width="8"
                  />
                  <!-- Progress circle -->
                  <circle 
                    cx="50" cy="50" r="42" 
                    fill="none" 
                    stroke="#2563EB" 
                    stroke-width="8"
                    stroke-linecap="round"
                    stroke-dasharray={`${skill.percent * 2.64} 264`}
                    class="transition-all duration-1000"
                  />
                </svg>
                <div class="absolute inset-0 flex items-center justify-center">
                  <span class="text-lg font-bold text-text-main">{skill.percent}%</span>
                </div>
              </div>
              <span class="text-sm font-medium text-text-muted">{skill.name}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
