---
// Education data
const education = {
  university: 'Telkom University',
  degree: 'Bachelor of Informatics',
  period: 'Sep 2022 - Apr 2026',
  duration: '3.5 Years (7 Semesters)',
  gpa: '3.66',
  location: 'Bandung, Indonesia',
};
---

<section id="education" class="py-20 bg-surface">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16 fade-in-up">
      <span class="text-primary font-bold tracking-wider text-sm uppercase">Academic Background</span>
      <h2 class="mt-3 font-display text-3xl md:text-5xl font-bold text-text-main">Education</h2>
    </div>
    
    <div class="max-w-3xl mx-auto fade-in-up">
      <div class="bg-white rounded-3xl p-8 border border-gray-100 shadow-soft">
        <div class="flex flex-col md:flex-row md:items-center gap-6">
          <!-- University Logo/Icon -->
          <div class="flex-shrink-0">
            <div class="w-20 h-20 bg-gradient-to-br from-primary to-blue-600 rounded-2xl flex items-center justify-center shadow-lg">
              <span class="material-icons-round text-white text-3xl">school</span>
            </div>
          </div>
          
          <!-- Education Details -->
          <div class="flex-1">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
              <h3 class="font-display font-bold text-2xl text-text-main">{education.university}</h3>
              <span class="inline-flex items-center gap-1 px-3 py-1 bg-primary/10 text-primary text-sm font-bold rounded-full w-fit">
                <span class="material-icons-round text-sm">star</span>
                GPA {education.gpa}
              </span>
            </div>
            <p class="text-primary font-semibold mt-1">{education.degree}</p>
            <div class="flex flex-wrap gap-4 mt-4 text-sm text-text-muted">
              <span class="flex items-center gap-1">
                <span class="material-icons-round text-base">calendar_today</span>
                {education.period}
              </span>
              <span class="flex items-center gap-1">
                <span class="material-icons-round text-base">schedule</span>
                {education.duration}
              </span>
              <span class="flex items-center gap-1">
                <span class="material-icons-round text-base">location_on</span>
                {education.location}
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
